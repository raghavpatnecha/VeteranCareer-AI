# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/veterancareer_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=veterancareer_db
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
DEBUG=True
APP_NAME=VeteranCareer AI
APP_VERSION=1.0.0
ALLOWED_HOSTS=*.clackypaas.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Web Scraping Configuration
SCRAPING_DELAY=2
MAX_CONCURRENT_REQUESTS=5
USER_AGENT=VeteranCareer-Bot/1.0

# Job Portal API Keys (if available)
NAUKRI_API_KEY=your-naukri-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@veterancareer.ai

# Machine Learning Model Settings
ML_MODEL_PATH=./models/
SKILL_MATCHING_THRESHOLD=0.7
JOB_MATCHING_THRESHOLD=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "https://*.clackypaas.com"]
RATE_LIMIT_PER_MINUTE=100

# Third-party Services
OPENAI_API_KEY=your-openai-api-key-for-ai-features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-for-location
